<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow">
  <h2 class="text-2xl font-semibold mb-4">Create your account</h2>

  <% if (error) { %>
    <div class="mb-4 rounded-md bg-red-50 border border-red-100 p-3 text-red-800"><%= error %></div>
  <% } %>

  <form action="/auth/register" method="POST" class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Username</label>
      <input type="text" name="username" placeholder="Your name" class="mt-1 block w-full border-gray-200 rounded-md p-2" required>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Email</label>
      <input type="email" name="email" placeholder="you@domain.com" class="mt-1 block w-full border-gray-200 rounded-md p-2" required>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Password</label>
      <input type="password" name="password" placeholder="Choose a secure password" class="mt-1 block w-full border-gray-200 rounded-md p-2" required>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Role</label>
      <select name="role" class="mt-1 block w-full border-gray-200 rounded-md p-2">
        <option value="user">User</option>
        <option value="admin">Admin</option>
      </select>
    </div>

    <div class="flex items-center justify-between">
      <a href="/auth/login" class="text-sm text-gray-600 hover:underline">Already have an account?</a>
      <button type="submit" class="ml-4 bg-emerald-600 text-white px-4 py-2 rounded">Register</button>
    </div>
  </form>
</div>
