<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow">
  <h2 class="text-2xl font-semibold mb-4">Welcome back</h2>

  <% if (error) { %>
    <div class="mb-4 rounded-md bg-red-50 border border-red-100 p-3 text-red-800"><%= error %></div>
  <% } %>

  <form action="/auth/login" method="POST" class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Email</label>
      <input type="email" name="email" placeholder="you@domain.com" class="mt-1 block w-full border-gray-200 rounded-md p-2" required>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Password</label>
      <input type="password" name="password" placeholder="••••••••" class="mt-1 block w-full border-gray-200 rounded-md p-2" required>
    </div>

    <div class="flex items-center justify-between">
      <a href="/auth/register" class="text-sm text-gray-600 hover:underline">Create an account</a>
      <button type="submit" class="ml-4 bg-emerald-600 text-white px-4 py-2 rounded">Login</button>
    </div>
  </form>
</div>
