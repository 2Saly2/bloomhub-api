<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= (typeof title !== 'undefined' ? title : 'BloomHub') %></title>
  <meta name="description" content="BloomHub - manage and showcase your projects">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800 antialiased">
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <a href="/" class="flex items-center gap-3">
          <div class="h-10 w-10 rounded-full bg-emerald-500 flex items-center justify-center text-white font-bold">B</div>
          <div>
            <div class="text-lg font-semibold">BloomHub</div>
            <div class="text-sm text-gray-500">Projects & collaboration</div>
          </div>
        </a>

        <nav class="hidden md:flex items-center gap-4 text-sm">
          <a href="/" class="hover:text-emerald-600">Home</a>
          <a href="/projects" class="hover:text-emerald-600">Projects</a>
          <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
            <a href="/admin" class="text-emerald-600 font-medium">Admin</a>
          <% } %>
        </nav>

        <div class="flex items-center gap-3">
          <% if (typeof user !== 'undefined' && user) { %>
            <div class="hidden sm:flex sm:items-center sm:gap-3">
              <span class="text-sm text-gray-600">Signed in as</span>
              <div class="px-3 py-1 bg-gray-100 rounded text-sm font-medium"><%= user.username %></div>
              <a href="/auth/logout" class="inline-block bg-red-500 text-white text-sm px-3 py-1 rounded">Logout</a>
            </div>
            <div class="sm:hidden">
              <a href="/auth/logout" class="text-sm text-red-500">Logout</a>
            </div>
          <% } else { %>
            <a href="/auth/login" class="text-sm text-gray-700 hover:underline">Login</a>
            <a href="/auth/register" class="ml-2 inline-block bg-emerald-600 text-white text-sm px-3 py-1 rounded">Get Started</a>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto p-6 sm:px-6 lg:px-8">
    <!-- flash / messages -->
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="mb-4 rounded-md bg-green-50 border border-green-100 p-3 text-green-800"> <%= success %> </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="mb-4 rounded-md bg-red-50 border border-red-100 p-3 text-red-800"> <%= error %> </div>
    <% } %>

    <section>
      <%- body %>
    </section>
  </main>

  <footer class="mt-12 py-6 bg-white border-t">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-sm text-gray-500">
      <div class="flex justify-between">
        <div>Â© <%= new Date().getFullYear() %> BloomHub</div>
        <div>
          <a href="/" class="mr-4 hover:underline">Home</a>
          <a href="/projects" class="mr-4 hover:underline">Projects</a>
          <a href="#" class="hover:underline">Contact</a>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
